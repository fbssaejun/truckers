<h1>Trucks</h1>

  <% if current_user && is_admin?  %>

  <button class='btn'><%= link_to 'Add Truck', new_truck_path %></button>


  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">View</th>


      </tr>
    </thead>
    <tbody>
        <% @trucks.each do |truck| %>
          <tr>
            <td><%= truck.name %></td>

            <td><%= link_to "Manage", truck %></td>

          </tr>
        <% end %>
      <% else %>

      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Company</th>
            <th scope="col">Year</th>
            <th scope="col">Capacity</th>
    
          </tr>
        </thead>
        <tbody>
        <% @trucks.each do |truck| %>
          <tr>
            <td><%= truck.name %></td>
            <td><%= truck.vehicle_type %></td>
            <td><%= truck.company_id %></td>
            <td><%= truck.year %></td>
            <td><%= truck.capacity %></td>
          <% if truck.reserved %>
            <td style="color:green">Reserved</td>
            <td><%= link_to 'Cancel Reservation', cancel_truck_path(truck), method: :post %></td>
          <% else %>
              <td><%= link_to 'Reserve', reserve_truck_path(truck), method: :post %></td>
          <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>