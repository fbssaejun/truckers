<h1>Available trucks</h1>

  <button class='btn'>Add Truck</button>

  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
      </tr>
    </thead>
    <tbody>
      <% if current_user && is_admin?  %>
        <% @trucks.each do |truck| %>
          <tr>
            <td><%= truck.name %></td>
            <td><%= truck.vehicle_type %></td>
            <td><%= link_to "Show" %></td>
            <td><%= link_to "Edit" %></td>
            <td><%= link_to "Delete" %></td>
          </tr>
      <% end %>
      <% else %>
        <% @trucks.each do |truck| %>
          <tr>
            <td><%= truck.name %></td>
            <td><%= truck.vehicle_type %></td>
            <td><%= link_to "Show" %></td>
            <td><%= link_to "Reserve" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>