<h1>Trucks</h1>

  <button class='btn'>Add Truck</button>
  <%= yield %>

  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">Company</th>
        <th scope="col">Year</th>
        <th scope="col">Capacity</th>

      </tr>
    </thead>
    <tbody>
      <% if current_user && is_admin?  %>
        <% @trucks.each do |truck| %>
          <tr>
            <td><%= truck.name %></td>
            <td><%= truck.vehicle_type %></td>
            <td><%= link_to "Show" %></td>
            <td><%= link_to "Edit" %></td>
            <td><%= link_to "Delete" %></td>
          </tr>
      <% end %>
      <% else %>
        <% @trucks.each do |truck| %>
          <tr>
            <td><%= truck.name %></td>
            <td><%= truck.vehicle_type %></td>
            <td><%= truck.company_id %></td>
            <td><%= truck.year %></td>
            <td><%= truck.capacity %></td>
          <% if truck.reserved %>
            <td>unavailable</td>
          <% else %>
            <td><%= link_to "Reserve" %></td>
          <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>